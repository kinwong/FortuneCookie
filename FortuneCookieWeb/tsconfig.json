{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "removeComments": false,
        "experimentalDecorators": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}